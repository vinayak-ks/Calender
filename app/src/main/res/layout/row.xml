<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/card_background_white"
    android:layout_width="fill_parent"
    android:layout_height="240.0dip"
    android:minHeight="240.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="190.0dip"
        android:minHeight="190.0dip"
        android:layout_weight="1.0">
        <ImageView
            android:id="@id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/login_social"
            android:scaleType="fitXY"
             />
         <TextView
            android:textSize="24.0sp"
            android:textColor="@android:color/white"
            android:id="@+id/list_item_google_cards_travel_category_name"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:text="Venues"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:gravity="right"
        android:orientation="vertical"
        android:background="@drawable/google_cards_background_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                />
            <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/priceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1984"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place: "
                />
            <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/placeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Germany"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>